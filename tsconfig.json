{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["typings.d.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
